#!/usr/bin/env bash

WALLDIR="$HOME/Pictures/wallpapers"

IMG=$(fd -e jpg -e png -e webp -e jxl . "$WALLDIR" |
    sk --prompt="ðŸ–¼ wallpaper > " \
        --height=50% \
        --reverse)

[ -z "$IMG" ] && exit 0

# âœ¨ ì¤‘ìš”: ë¨¼ì € preload
hyprctl hyprpaper preload "$IMG" >/dev/null

# ê·¸ ë‹¤ìŒ ì ìš©
hyprctl hyprpaper wallpaper ",$IMG" >/dev/null
